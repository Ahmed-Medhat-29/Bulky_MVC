@model Category
@{
	ViewData["Title"] = "Delete Category";
}

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Category Name</label>
			<input asp-for="Name" class="form-control" disabled />
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder" class="form-label">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" disabled />
		</div>
		<div class="row">
			<div class="col-6 col-md-3 d-grid">
				<button type="submit" class="btn btn-danger">Delete</button>
			</div>
			<div class="col-6 col-md-3 d-grid">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border">Back to List</a>
			</div>
		</div>

	</div>
</form>