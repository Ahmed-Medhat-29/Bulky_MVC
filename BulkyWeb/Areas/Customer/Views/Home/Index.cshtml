@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 border-0 shadow-sm">
                @* Image Container: Enforce height to prevent grid breakage *@
                
                    <img src="@product.ImageUrl" 
                         class="card-img-top" 
                         alt="@product.Title" />
                

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@product.Title">
                        @product.Title
                    </h5>
                    <p class="card-text text-muted small text-uppercase mb-3">
                        By <span class="fw-bold text-dark">@product.Author</span>
                    </p>

                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-decoration-line-through text-muted small">
                                @product.ListPrice.ToString("c")
                            </span>
                            <span class="h5 mb-0 text-primary fw-bold">
                                @product.Price100.ToString("c")
                            </span>
                        </div>
                        
                        <a asp-action="Details"
                           asp-route-productId="@product.Id"
                           class="btn btn-dark w-100 stretched-link">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    As low as:
                                    <span>
                                        @product.Price100.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>